{
  "name": "task-manager",
  "version": "1.0.0",
  "description": "Full-stack TypeScript task management application",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "build": "cd backend && npm run build && cd ../frontend && npm run build",
    "db:setup": "cd backend && npm run db:generate && npm run db:push",
    "db:seed": "cd backend && npm run db:seed",
    "db:studio": "cd backend && npm run db:studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["task-manager", "typescript", "react", "nodejs", "prisma"],
  "author": "Your Name",
  "license": "MIT"
}
